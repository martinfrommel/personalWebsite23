---
// Astro Component
---
<div
  x-data="{ modalOpen: false }"
  @keydown.escape.window="modalOpen = false"
  :class="{ 'z-40': modalOpen }"
  class="relative w-auto h-auto"
>
  <div @click="modalOpen=true" class="cursor-pointer">
    <slot name="trigger" />
  </div>
  <template x-teleport="body">
    <div
      x-show="modalOpen"
      class="fixed top-0 left-0 z-[99] flex items-center justify-center w-screen h-screen"
      x-cloak
    >
      <div
        x-show="modalOpen"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="ease-in duration-300"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        @click="modalOpen=false"
        class="absolute inset-0 w-full h-full bg-[#303037]/70 dark:bg-[#e2e9e0]/50 bg-opacity-50 backdrop-blur-sm"
      >
      </div>
      <div
        x-show="modalOpen"
        x-trap.inert.noscroll="modalOpen"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-90"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-90"
        class="relative w-full m-3 py-6 bg-[#e2e9e0] dark:bg-[#303037] shadow-md px-7 bg-opacity-90 drop-shadow-md backdrop-blur-sm sm:max-w-6xl rounded-sm sm:rounded-md"
      > 
        <div class="flex items-center justify-between pb-3">
          <h3 class="text-lg font-semibold"><slot name="title"></slot></h3>
          <svg aria-label="Close the modal" aria-labelledby="button" @click="modalOpen=false" class="absolute top-0 right-0 p-1 mt-5 mr-5 hover:cursor-pointer transition-all ease-out rounded-full hover:bg-[#303037]/20  hover:dark:bg-[#e2e9e0]/20" width="2rem" height="2rem" xmlns="http://www.w3.org/2000/svg"><path fill="currentColor" d="M5 5h2v2H5V5zm4 4H7V7h2v2zm2 2H9V9h2v2zm2 0h-2v2H9v2H7v2H5v2h2v-2h2v-2h2v-2h2v2h2v2h2v2h2v-2h-2v-2h-2v-2h-2v-2zm2-2v2h-2V9h2zm2-2v2h-2V7h2zm0 0V5h2v2h-2z"/>
        </div>
        <div class="relative w-auto pb-8">
          <slot/>
        </div>
        <div
          class="flex flex-col-reverse sm:flex-row sm:justify-between sm:space-x-2"
        >
          <slot name="footer" />
        </div>
      </div>
    </div>
  </template>
</div>
