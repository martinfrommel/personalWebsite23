---
import FeaturedLogos from "./FeaturedLogos.astro";
import FullScreenModal from "./FullScreenModal.astro";
import SocialMediaLinks from "./SocialMediaLinks.astro";
import type {TailwindSize} from "../types/tailwindSizes"


interface Props {
  size: TailwindSize;
  className?: string;
  gitHubLink: string;
}

const { size, className, gitHubLink } = Astro.props;
---

<!-- Music Credits -->
<a
  class="menuItem"
  aria-label="My Music Credits"
  href="https://tidal.com/browse/credits/20269946"
  target="_blank"
>
  <div class="flex flex-col flex-none justify-center items-center flex-wrap">
    <svg
      height={size}
      width={size}
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M8 4h12v16h-8v-8h6V8h-8v12H2v-8h6V4zm0 10H4v4h4v-4zm10 0h-4v4h4v-4z"
      ></path>
    </svg>
    <span class="font-mono xl:text-lg">Music</span>
  </div></a
>
<!-- GitHub -->
<a class="menuItem" href={gitHubLink} target="_blank"
  ><div
    slot="trigger"
    class="flex flex-col flex-none justify-center items-center flex-wrap"
  >
    <svg
      height={size}
      width={size}
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M10 2H2v8h3v12h2V10h3v2h2v2h2v8h8v-8h-8v-2h-2v-2h-2V2zM4 8V4h4v4H4zm12 12v-4h4v4h-4z"
      ></path>
    </svg><span class="font-mono xl:text-lg">GitHub</span>
  </div>
</a>
<!-- Projects -->
<FullScreenModal
  windowId="projects-section"
  id={1}
  title="My Recent Projects"
  subtitle="...take a look at what I'm up to."
>
  <!-- Modal Trigger -->
  <div slot="trigger" class="modalMenuItem">
    <svg
      height={size}
      width={size}
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M8 3h8v4h6v14H2V7h6V3zm2 4h4V5h-4v2zM4 9v10h16V9H4z"></path>
    </svg>
    <span class="font-mono xl:text-lg">Projects</span>
  </div>
  <!-- Modal Content -->
  <FeaturedLogos
    className="mt-2 flex flex-col flex-nowrap justify-center items-center w-fit scrollbar-hide snap-y snap-mandatory scroll-smooth text-left space-y-14 xl:space-y-0 xl:flex xl:flex-row xl:justify-between xl:items-baseline xl:space-x-12"
    fullDescription={true}
  />

  <span slot="footer" class="font-mono">Scroll for other projects ðŸ‘‡</span>
</FullScreenModal>
<FullScreenModal
  windowId="socials-section"
  id={3}
  title="Socials"
  subtitle="...where you can find me."
>
  <!-- Modal Trigger -->
  <div slot="trigger" class="modalMenuItem">
    <svg
      height={size}
      width={size}
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M2 3H0v18h24V3H2zm20 2v14H2V5h20zM10 7H6v4h4V7zm-6 6h8v4H4v-4zm16-6h-6v2h6V7zm-6 4h6v2h-6v-2zm6 4h-6v2h6v-2z"
      ></path>
    </svg>
    <span class="font-mono xl:text-lg">Socials</span>
  </div>
  <!-- Modal Content -->
  <section
    id="socialMediaLinks"
    class="flex flex-col flex-none justify-start items-center flex-wrap space-y-8 landscape:flex-row landscape:justify-center landscape:space-y-0 landscape:space-x-8 landscape:lg:flex-col landscape:lg:justify-start landscape:lg:space-x-0 landscape:lg:space-y-8"
  >
  <SocialMediaLinks size={size} instaHandle={"soundtechjesus"} linkedInHandle={"martin-frommel"} telegramHandle={"soybeandelautismo"} />
  </section>
</FullScreenModal>
<style>
  .modalMenuItem {
    @apply flex flex-col flex-none justify-center items-center flex-wrap active:scale-90 transition-all duration-100 hover:cursor-pointer;
  }

  .menuItem {
    @apply active:scale-90 transition-all duration-100;
  }
</style>
